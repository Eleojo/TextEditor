@model TextEditor.Models.Doc

@{
    ViewData["Title"] = "Delete Document";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3>Confirm Deletion</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-center">Are you sure you want to delete this document?</h5>
                    <hr />
                    <div class="mb-4">
                        <div class="row">
                            <div class="col-sm-3 font-weight-bold">Title:</div>
                            <div class="col-sm-9">@Html.DisplayFor(model => model.Title)</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-3 font-weight-bold">Content:</div>
                            <textarea id="tiny" asp-for="Content" class="form-control tinymce" rows="10"></textarea>
                        </div>
                       
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
